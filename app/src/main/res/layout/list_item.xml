<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="@dimen/list_item_space"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/RankingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016-06-01 00:00:00 uploaded"
            android:layout_marginBottom="@dimen/list_item_space"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_item_space"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ThumbnailImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/thumbnail" />

                <TextView
                    android:id="@+id/CmsIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sm000000" />

                <TextView
                    android:id="@+id/TasPointView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="point"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/TagsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ViewCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="view"/>

                    <TextView
                        android:id="@+id/CommentCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="comment"/>

                    <TextView
                        android:id="@+id/MyListCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mylist"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>